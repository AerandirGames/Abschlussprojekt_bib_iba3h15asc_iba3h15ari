<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_praxisName"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Praxisname"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_plz"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="PLZ"
        android:inputType="textPostalAddress"
        app:layout_constraintEnd_toStartOf="@+id/et_stadt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_adresse" />

    <EditText
        android:id="@+id/et_stadt"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Stadt"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_adresse" />
    <EditText
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_adresse"
            android:hint="Adresse + Nr." android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/et_praxisName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_praxisTelNr" android:hint="Praxistelefonnr." android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/et_stadt" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_praxisMail"
            android:hint="Praxismailadresse" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/et_praxisTelNr" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
            android:text="Ich habe die Datenschutzbestimmungen gelesen und akzeptiere die AGBs."
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/checkBox" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/et_praxisMail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Registrieren"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />
</android.support.constraint.ConstraintLayout>